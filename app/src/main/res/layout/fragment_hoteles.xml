<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.jonathanduque.ejemplomd.Hoteles2">>
    <LinearLayout
        style="@style/LinearLayoutStyle"
        android:layout_weight="2.7">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="@style/textViewStyle"
            android:text="@string/title_activity_hoteles"
            android:gravity="center"
            android:background="@color/black"/>

    </LinearLayout>
    <LinearLayout
        style="@style/LinearLayoutStyle"
        android:background="@drawable/santamaria">
        <Button
            style="@style/ButtonStyle"
            android:id="@+id/bHotelSantamaria"/>
    </LinearLayout>
    <LinearLayout
        style="@style/LinearLayoutStyle"
        android:background="@drawable/la_castellana">
        <Button
            style="@style/ButtonStyle"
            android:id="@+id/bHotelLaCastellana"/>
    </LinearLayout>
    <LinearLayout
        style="@style/LinearLayoutStyle"
        android:background="@drawable/elcacique">
        <Button
            style="@style/ButtonStyle"
            android:id="@+id/bHotelElCacique"/>
    </LinearLayout>
</LinearLayout>